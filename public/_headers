# Security headers for all pages
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  X-XSS-Protection: 1; mode=block
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Content-Security-Policy: default-src 'self'; script-src 'self'; style-src 'self'; object-src 'none'; base-uri 'self'; frame-ancestors 'none';
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

# Cache assets for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 week
/images/*
  Cache-Control: public, max-age=604800

# Cache CSS and JS files for 1 week, but allow revalidation
/_astro/*
  Cache-Control: public, max-age=604800, stale-while-revalidate=86400
  Link: </fonts/main-font.woff2>; rel=preload; as=font; crossorigin

# Special handling for the problematic slug CSS file
/_astro/_slug_*
  Link: </fonts/main-font.woff2>; rel=preload; as=font; crossorigin
  Priority: low

# Don't cache HTML files
/*.html
  Cache-Control: public, max-age=0, must-revalidate