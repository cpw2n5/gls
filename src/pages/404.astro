---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Page Not Found - GetLifeSorted.com"
  description="The page you're looking for doesn't exist or has been moved."
  noIndex={true}
>
  
  <main class="container mx-auto px-4 py-16 min-h-screen flex flex-col items-center justify-center text-center">
    <h1 class="text-4xl md:text-6xl font-bold mb-6">404</h1>
    <h2 class="text-2xl md:text-3xl font-semibold mb-4">Page Not Found</h2>
    <p class="text-lg mb-8 max-w-lg">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <div class="space-y-4">
      <a 
        href="/" 
        class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
      >
        Return to Homepage
      </a>
      <div class="pt-4">
        <p class="text-gray-600">
          Looking for something specific? Try one of these:
        </p>
        <div class="flex flex-wrap justify-center gap-4 mt-4">
          <a href="/articles" class="text-blue-600 hover:underline">Articles</a>
          <a href="/guides" class="text-blue-600 hover:underline">Guides</a>
          <a href="/calculators" class="text-blue-600 hover:underline">Calculators</a>
          <a href="/about" class="text-blue-600 hover:underline">About Us</a>
          <a href="/contact" class="text-blue-600 hover:underline">Contact</a>
        </div>
      </div>
    </div>
  </main>
</Layout>